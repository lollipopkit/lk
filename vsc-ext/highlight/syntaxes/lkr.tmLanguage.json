{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LKR",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#ident-access" },
    { "include": "#functions" },
    { "include": "#fn-params" },
    { "include": "#call-named-args" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lkr",
          "match": "\\b(if|else|while|let|return|fn|go|select|case|default|break|continue|import|from|as|in)\\b"
        },
        {
          "name": "storage.type.lkr",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.lkr",
          "match": "(\\|\\||&&)"
        },
        {
          "name": "keyword.operator.comparison.lkr",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.lkr",
          "match": "(\\+|-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.lkr",
          "match": "="
        },
        {
          "name": "keyword.operator.unary.lkr",
          "match": "!"
        },
        {
          "name": "keyword.operator.channel.lkr",
          "match": "<-"
        },
        {
          "name": "keyword.operator.optional-chaining.lkr",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.nullish-coalescing.lkr",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.range.lkr",
          "match": "\\.\\.(=)?"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lkr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lkr",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.lkr",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.lkr",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.lkr",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.interpolation.lkr",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.lkr" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.lkr" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "constant.character.escape.lkr",
              "match": "\\\\[`\\$\\\\nrtbf]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.lkr",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.lkr",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lkr",
          "begin": "#",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.lkr" }
          },
          "end": "$"
        },
        {
          "name": "comment.line.double-slash.lkr",
          "begin": "//",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.lkr" }
          },
          "end": "$"
        },
        {
          "name": "comment.block.lkr",
          "begin": "/\\*",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.lkr" }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.lkr" }
          }
        }
      ]
    },
    "ident-access": {
      "patterns": [
        {
          "name": "variable.other.member.lkr",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z0-9_]+|\\.[0-9]+|\\.'[^']+'|\\.\"[^\"]+\")*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.lkr",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "fn-params": {
      "patterns": [
        {
          "name": "meta.function.parameters.lkr",
          "begin": "\\bfn\\s+[A-Za-z_][A-Za-z0-9_]*\\s*\\(",
          "beginCaptures": {
            "0": { "name": "keyword.declaration.function.lkr" }
          },
          "end": "\\)",
          "contentName": "meta.parameters.lkr",
          "patterns": [
            {
              "name": "meta.parameters.named-block.lkr",
              "begin": "\\{",
              "beginCaptures": { "0": { "name": "punctuation.section.block.begin.lkr" } },
              "end": "\\}",
              "endCaptures": { "0": { "name": "punctuation.section.block.end.lkr" } },
              "patterns": [
                {
                  "name": "variable.parameter.named.lkr",
                  "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*:(?=\n|\r|\\s)",
                  "captures": {
                    "1": { "name": "variable.parameter.named.lkr" },
                    "0": { "name": "punctuation.separator.key-value.lkr" }
                  }
                },
                {
                  "name": "entity.name.type.lkr",
                  "match": ":\\s*[^,}]+"
                },
                {
                  "name": "keyword.operator.assignment.lkr",
                  "match": "="
                }
              ]
            },
            {
              "name": "variable.parameter.lkr",
              "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*(:|,|\\)))"
            },
            {
              "name": "entity.name.type.lkr",
              "match": ":\\s*[^,})]+"
            }
          ]
        }
      ]
    },
    "call-named-args": {
      "patterns": [
        {
          "name": "meta.call.arguments.lkr",
          "begin": "\\(",
          "beginCaptures": { "0": { "name": "punctuation.section.group.begin.lkr" } },
          "end": "\\)",
          "endCaptures": { "0": { "name": "punctuation.section.group.end.lkr" } },
          "patterns": [
            {
              "name": "variable.parameter.named.arg.lkr",
              "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*:(?=\n|\r|\\s)",
              "captures": {
                "1": { "name": "variable.parameter.named.arg.lkr" },
                "0": { "name": "punctuation.separator.key-value.lkr" }
              }
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.lkr"
}
