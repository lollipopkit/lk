{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build VS Code Extension",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "compile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/vsc-ext"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build LKR LSP Server",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "lkr-lsp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build LKR LSP Server",
                "Build VS Code Extension"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Extension Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/vsc-ext"
            },
            "problemMatcher": []
        }
    ]
}